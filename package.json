{
  "name": "vscode-diagnostics-dumper",
  "displayName": "vscode-diagnostics-dumper",
  "description": "Automatically save the text output from the problem area",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Diagnostics Dumper",
      "properties": {
        "diagnosticsDumper.outputDir": {
          "type": "string",
          "default": "",
          "description": "诊断 JSON 的输出目录；留空时默认写到桌面"
        }
      }
    },
    "commands": [
      {
        "command": "diagnosticsDumper.dumpNow",
        "title": "Diagnostics Dumper: Dump Now"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
