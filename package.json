{
  "name": "vscode-diagnostics-dumper",
  "displayName": "VS Code 诊断信息导出器",
  "description": "实时监控和导出VS Code编辑器中的代码诊断信息到JSON文件",
  "version": "1.0.0",
  "publisher": "konbakuyomu",
  "author": {
    "name": "konbakuyomu",
    "email": "konbakuyomu@gmail.com"
  },
  "icon": "images/icon.jpg",
  "galleryBanner": {
    "color": "#2C5F5D",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/konbakuyomu/vscode-diagnostics-dumper.git"
  },
  "bugs": {
    "url": "https://github.com/konbakuyomu/vscode-diagnostics-dumper/issues"
  },
  "homepage": "https://github.com/konbakuyomu/vscode-diagnostics-dumper#readme",
  "keywords": [
    "diagnostics",
    "error",
    "warning",
    "export",
    "json",
    "linter",
    "code-quality",
    "analysis",
    "监控",
    "诊断",
    "导出"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Diagnostics Dumper",
      "properties": {
        "diagnosticsDumper.outputDir": {
          "type": "string",
          "default": "",
          "description": "诊断 JSON 的输出目录；留空时默认写到桌面"
        }
      }
    },
    "commands": [
      {
        "command": "diagnosticsDumper.dumpNow",
        "title": "Diagnostics Dumper: Dump Now"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
